# API Settings
APP_NAME=NLP Model API
APP_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# Model Settings
MODEL_PATH=./models/bert-imdb
MODEL_NAME=bert-base-uncased
NUM_CLASSES=2
MAX_LENGTH=512
BATCH_SIZE=32

# Class names (comma-separated)
CLASS_NAMES=negative,positive

# CORS Settings (comma-separated)
CORS_ORIGINS=*
CORS_METHODS=*
CORS_HEADERS=*

# Optional: API Key for authentication
# API_KEY=your-secret-api-key

# Performance
ENABLE_CACHING=true
CACHE_SIZE=1000
